<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.hyrt.app.FullscreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_user_relative_height">

        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hua"
            android:layout_above="@+id/face_iv"
            android:layout_marginBottom="@dimen/main_user_cover_marginbottom"/>
        
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/main_user_updatecore_tvheight"
           android:gravity="center"
           android:id="@+id/update_cover"
           android:background="@color/main_user_update_covercolor">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_user_backtv_size"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/click_usercover"/>

        </LinearLayout>

        <ImageView
            style="@style/FaceIv"
            android:id="@+id/face_iv"
            android:layout_marginBottom="@dimen/main_user_face_marginbottom"
            android:layout_marginLeft="@dimen/main_user_face_marginleft"
            android:layout_above="@+id/line_index"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/line_color"
            android:id="@+id/line_index"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    


    <LinearLayout
       style="@style/LinearLayout_SuperParent">
        
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            style="@style/MenuIv"
            android:background="@drawable/my_school"
            android:id="@+id/my_school"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            style="@style/MenuIv"
            android:background="@drawable/my_class"
            android:id="@+id/my_class"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            style="@style/MenuIv"
            android:background="@drawable/my_info"
            android:id="@+id/my_info"/>

        </RelativeLayout>


    </LinearLayout>




</LinearLayout>
